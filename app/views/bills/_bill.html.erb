<div id="<%= dom_id bill %>">
  <p>
    <strong>Amount:</strong>
    <%= bill.amount %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= bill.bill_type %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= bill.created_at.strftime("%d-%m-%Y") %>
  </p>

  <p>
    <strong>Employee:</strong>
    <%= bill.employee.full_name %>
  </p>

  <p>
    <strong>Employee:</strong>
    <%= bill.employee.department.name %>
  </p>

  <%= link_to "Edit this bill", edit_bill_path(bill) %>
  <%= button_to "Destroy this bill", bill, method: :delete %>

</div>
